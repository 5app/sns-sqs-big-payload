{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ES2017"],
		"rootDir": "./src",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": false,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"types": ["node", "jest"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/node_modules/*", "dist"]
}
